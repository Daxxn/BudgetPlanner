                                <ComboBox ItemsSource="{Binding Path=AllExpenseCategories}" SelectedItem="{Binding Path=SelectedCategory, Mode=TwoWay}" 
                                          Cursor="Hand" MaxDropDownHeight="200">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=CategoryName, Mode=TwoWay}" ToolTip="Press Enter to save. (BUG)" Cursor="Hand"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            #endregion

            #region ::Totals Display::
            <TextBox x:Name="IncomeTotal" Background="AliceBlue" IsReadOnly="True" 
                 Grid.Column="1" Grid.Row="2"/>
            <TextBox x:Name="ExpenseTotal" Background="AliceBlue" IsReadOnly="True"
                 Grid.Column="3" Grid.Row="2"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,0,2,0">Total Income:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="2" Margin="4,0,2,0">Total Expense:</TextBlock>
            #endregion
        </Grid>-->
        <!--#endregion-->
    </Grid>
</Window>
