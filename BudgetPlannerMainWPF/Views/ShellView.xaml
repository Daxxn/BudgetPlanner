<Window x:Class="BudgetPlannerMainWPF.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlannerMainWPF.Views"
        mc:Ignorable="d" 
        Title="Budget Planner" Height="500" Width="800">
    <Grid>
        <!--#region ::Grid Definitions::-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region ::Menu Bar::-->
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <MenuItem x:Name="NewFile" Header="New"/>
            <MenuItem x:Name="OpenFile" Header="Open"/>
            <MenuItem x:Name="SaveFile" Header="Save"/>
        </Menu>
        <!--#endregion-->

        <!--#region ::Buttons::-->
        <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                <Button x:Name="AddIncomeColumn" Content="New Income" Margin="0,2,2,2"/>
                <Button x:Name="AddExpenseColumn" Content="New Expense" Margin="2,2,0,2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                <Button x:Name="RemoveIncome" Margin="0,2,2,2">Remove Income</Button>
                <Button x:Name="RemoveExpense" Margin="2,2,0,2">Remove Expense</Button>
            </StackPanel>
        </Grid>
        <!--#endregion-->



        <!--#region ::Income Selection Info::-->


        <TextBlock Grid.Column="1" Grid.Row="3" Margin="0,10,0,10"
                   >Net Income:</TextBlock>

        <TextBlock x:Name="NetDifference" Background="AliceBlue" IsEnabled="False" Margin="0,10,0,10"
                   Grid.Column="2" Grid.Row="3"/>


        <!--#endregion-->


        <!--#region ::Income Display Grid::-->
        <Grid Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--#region ::Income Text::-->
            <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   > Income Selection Information</TextBlock>

            <TextBlock Grid.Column="0" Grid.Row="2">Name:</TextBlock>
            <TextBlock Text="{Binding Path=SelectedIncome.Category}" Background="AliceBlue"
                       Grid.Column="1" Grid.Row="2" Margin="0,2,0,2"/>

            <TextBlock Grid.Column="0" Grid.Row="3">Amount:</TextBlock>
            <TextBlock Text="{Binding Path=SelectedIncome.Value}" Background="AliceBlue"
                   Grid.Column="1" Grid.Row="3" Margin="0,2,0,2"/>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region ::Expense Display Grid::-->
        <Grid Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--#region ::Expense Text::-->
            <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center" 
                   >Expense Selection information</TextBlock>

            <TextBlock Grid.Column="0" Grid.Row="1">Name:</TextBlock>
            <TextBlock Text="{Binding Path=SelectedExpense.Category}" Background="AliceBlue"
                           Grid.Column="1" Grid.Row="1" Margin="0,2,0,2"/>

            <TextBlock Grid.Column="0" Grid.Row="2">Amount:</TextBlock>
            <TextBlock Text="{Binding Path=SelectedExpense.Value}" Background="AliceBlue"
                   Grid.Column="1" Grid.Row="2" Margin="0,2,0,2"/>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->



        <!--#region ::Data Grid Income::-->
        <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="8" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="IncomeData" AlternatingRowBackground="AliceBlue" AutoGenerateColumns="False"
                  MinWidth="100" CanUserAddRows="False" CanUserDeleteRows="False"
                  SelectedItem="{Binding Path=SelectedIncome}"
                  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,0,0,4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=IdNumber}"/>
                    <DataGridTextColumn Header="Income" Binding="{Binding Path=Category, Mode=TwoWay}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Path=Value, Mode=TwoWay}"/>
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion-->

            <!--#region ::Data Grid Expense::-->
            <DataGrid x:Name="ExpenseData" AlternatingRowBackground="AliceBlue" AutoGenerateColumns="False"
                  MinWidth="100" CanUserAddRows="False" CanUserDeleteRows="False"
                  SelectedItem="{Binding Path=SelectedExpense}"
                  Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="4,0,0,4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=IdNumber}"/>
                    <DataGridTextColumn Header="Expense" Binding="{Binding Path=Category, Mode=TwoWay}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Path=Value, Mode=TwoWay}"/>
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion-->

            <!--#region ::Totals Boxes::-->
            <TextBox x:Name="IncomeTotal" Background="AliceBlue" IsReadOnly="True" 
                 Grid.Column="1" Grid.Row="2"/>
            <TextBox x:Name="ExpenseTotal" Background="AliceBlue" IsReadOnly="True"
                 Grid.Column="3" Grid.Row="2"/>
            <!--#endregion-->

            <!--#region ::Totals Text::-->
            <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,0,2,0">Total Income:</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="2" Margin="4,0,2,0">Total Expense:</TextBlock>
            <!--#endregion-->
        </Grid>
    </Grid>
</Window>
