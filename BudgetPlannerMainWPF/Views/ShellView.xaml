                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            #region ::Income DataGrid::
            <DataGrid x:Name="IncomeData" AlternatingRowBackground="AliceBlue" AutoGenerateColumns="False"
                  MinWidth="100" CanUserAddRows="False" CanUserDeleteRows="False"
