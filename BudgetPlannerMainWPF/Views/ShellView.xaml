        WindowStyle="SingleBorderWindow" SizeToContent="Width">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFE1E9F1" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region ::Menu::-->
        <!--Good enough for now. Maybe make the save buttons into a drop-down menu.-->
        <Menu Name="Menu_Bar" Grid.Row="0" Background="LightGray">
            <MenuItem x:Name="NewFile_Button" Header="New" ToolTip="Creates a New Budget"/>
            <MenuItem x:Name="OpenFile_Button" Header="Open" ToolTip="Opens a Budget"/>
            <MenuItem x:Name="SaveFile_Button" Header="Save" ToolTip="Saves a budget."/>
            <MenuItem x:Name="SaveFileAs" Header="Save As" ToolTip="Saves a new Budget file."/>
            <MenuItem x:Name="SaveAllAs_Button" Header="Save All As" ToolTip="Saves both the budget and the Categories as a new file."/>
            <MenuItem x:Name="SaveAll_Button" Header="Save All" ToolTip="Saves both the budget and the Categories."/>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource BackGround_Main}"/>
            </Grid.Background>

            <Button x:Name="Activate_DataView" Grid.Column="0" Padding="20,5,20,5" Margin="0,0,2,0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F7F7" Offset="0"/>
                        <GradientStop Color="#FF7C90BB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                Budget
            </Button>
            <Button x:Name="Activate_SubCategoryView" Grid.Column="1" Padding="20,0,20,0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F7F7"/>
                        <GradientStop Color="#FF7C90BB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                Categories
            </Button>
            <Button x:Name="Activate_PaystubView" Grid.Column="2" Padding="20,0,20,0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F7F7"/>
                        <GradientStop Color="#FF7C90BB" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                Paystubs
            </Button>
        </Grid>
